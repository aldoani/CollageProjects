@using Microsoft.AspNet.Identity
@{ string controller = ViewContext.RouteData.Values["Controller"].ToString();
    string action = ViewContext.RouteData.Values["Action"].ToString();}
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">
                <p class="nav-style-elment">
                    
                    <i class="fa fa-sign-out">

                    </i>Log off
                </p>
            </a>
        </li>
        
        <li class="@((controller == "StoreAdverts1" && action == "Index") ? "active" : "") nav-item">
            <a class="nav-link" href="@Url.Action("Index","Manage")">
                <p class="nav-style-elment">
                    
                    <i class="fa fa-user-circle-o">
                    </i> @User.Identity.GetUserName()
                </p>
            </a>
        </li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav">
        <li class="@((controller == "Account" && action == "Register") ? "active" : "") nav-item">
            <a class="nav-link" href="@Url.Action("Register", "Account", new { id = "registerLink" })">
                <i class="fa fa-user">
                </i>
                Register
            </a>
        </li>
        <li class="@((controller == "Account" && action == "Login") ? "active" : "") nav-item">
            <a class="nav-link" href="@Url.Action("Login", "Account", new { id = "loginLink" })">
                <i class="fa fa-sign-in">
                </i>
                Log in
            </a>
        </li>
    </ul>
}
